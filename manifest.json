{
  "manifest_version": 3,
  "name": "Tab Cleanser",
  "version": "1.0.0",
  "description": "Automatically clears cookies, local storage, session storage, and cache when tabs are closed",
  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "browsingData",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Cleanser",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tab-cleanser@myselfabdullah007.com",
      "strict_min_version": "109.0"
    }
  }
} 